        }

        h1 {
            font-size: 28px;
            color: {{demo.color}} /* Blue color */
            margin-bottom: 20px;
        }

        p {
            font-size: 16px;
            color: #333; /* Dark gray color */
            line-height: 1.6;
        }

        table {
            width: 100%;
        }

        table tr td {
            padding: 10px 0;
        }

        table tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        img.logo {
            max-width: 200px;
            display: block;
            margin: 0 auto;
        }

        .footer {
            text-align: center;
            font-size: 14px;
            color: #777; /* Light gray color */
            padding-top: 20px;
        }
    </style>
</head>
